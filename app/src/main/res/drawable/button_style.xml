<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="@dimen/button_corner_radius" />
    <solid android:color="@color/white" />
    <size
        android:width="250dp"
        android:height="50dp" />
    <gradient
        android:angle="@dimen/gradient_button_angle"
        android:startColor="@color/gradient_start_color"
        android:centerColor="@color/gradient_center_color"
        android:endColor="@color/gradient_end_color"
        android:centerX="50%"
        android:type="linear" />
    <stroke
        android:width="2.5dp"
        android:color="@color/silver" />
</shape>