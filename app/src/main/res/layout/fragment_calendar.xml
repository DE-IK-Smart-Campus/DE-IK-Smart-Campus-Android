<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <CalendarView
        android:id="@+id/calendar"
        style="@android:style/Widget.DeviceDefault.Light.CalendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:focusedMonthDateColor="@color/textColorBlack"
        android:selectedWeekBackgroundColor="@color/colorAccent"
        android:textAlignment="center"
        android:unfocusedMonthDateColor="@color/colorPrimary"
        android:weekNumberColor="@color/textColorBlack"
        android:weekSeparatorLineColor="@color/textColorBlack"
        tools:showWeekNumber="false" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendar">

        <TextView
            android:id="@android:id/empty"
            android:layout_width="221dp"
            android:layout_height="84dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="36sp" />

        <ListView
            android:id="@+id/calendar_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/new_event_add"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="62dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:foregroundGravity="top"
            app:backgroundTint="@color/colorPrimaryDark"
            app:elevation="0dp"
            app:rippleColor="@color/colorAccent"
            app:srcCompat="@android:drawable/ic_input_add" />

    </FrameLayout>

</RelativeLayout>