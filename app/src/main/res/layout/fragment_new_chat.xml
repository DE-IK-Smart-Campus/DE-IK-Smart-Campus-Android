<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/chat_new_partnerJids_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Partner ID : example: Josh153, Norci241"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/chat_new_msg_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Default message"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/chat_new_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crete new chat" />

</LinearLayout>